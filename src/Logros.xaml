<Page
    x:Class="ProyectoDSI.Logros"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LogroDSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="mainGrid_">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <!--imagen de fondo-->
        <Image x:Name="backgroudImage" Source="Assets/mainMenuBackgroud.png" Stretch="Fill" Grid.ColumnSpan="6" Grid.RowSpan="3"></Image>
        <!--Fama completados-->
        <Image Source="Assets/mainButton.png" Stretch="Fill" Height="100" Width="400" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="famaText_" Grid.ColumnSpan="2" Text="Fama: 0 Followers"
                    FontSize="25" VerticalAlignment="Center" 
                    HorizontalAlignment="Center" Foreground="White"/>
        <!--Logros total-->
        <Image Source="Assets/mainButton.png" Stretch="Fill" Height="100" Width="400"
               Grid.Column="2" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="logrosText_" Grid.Column="2" Grid.ColumnSpan="2" Text="Completados: 3/40"
                    FontSize="25" VerticalAlignment="Center"
                    HorizontalAlignment="Center" Foreground="White" FocusVisualPrimaryBrush="White"/>
        <!--Dinero total-->
        <Image Source="Assets/mainButton.png" Stretch="Fill" Height="100" Width="400" Grid.Column="4" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="dineroText_" Grid.Column="4" Grid.ColumnSpan="2" Text="Dinero: 0 €"
                    FontSize="25" VerticalAlignment="Center"
                   HorizontalAlignment="Center" Foreground="White"/>
        <!--botón de atrás-->
        <StackPanel x:Name="downLeft" Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="back" Width="120" Height="90" Background="Transparent" 
                    VerticalAlignment="Center" HorizontalAlignment="Center" Click="back_Click"  >
                <Canvas x:Name="backCanvas" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="Assets/backButton.png" Stretch="Fill"
                           Height="100" Width="150" Canvas.Left ="-70"  Canvas.Top="-50"/>
                </Canvas>
            </Button>
        </StackPanel>

        <ListView x:Name="listaLogros_" Grid.Row="1" Grid.ColumnSpan="6" VerticalAlignment="Center" HorizontalAlignment="Center"
                  Height="570" Width="1150" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:VMLogro">
                    <Border x:Name="borderList_" Background= "Transparent" BorderThickness="5" Margin="5, 0, 0, 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400"/>
                                <ColumnDefinition Width="500"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Image Source="{x:Bind Imagen}" Stretch="Fill" Height="60" Width="1150" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
                            <TextBlock Text="{x:Bind Nombre}" Foreground="Black" FontSize="14" 
                                        VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"/>
                            <TextBlock Text="{x:Bind Requisitos}" Foreground="Black" FontSize="14" 
                                       Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"/>
                            <TextBlock Text="Recompensas: " Foreground="Black" FontSize="14" 
                                       Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{x:Bind Recompensa}" Foreground="Black" FontSize="14" 
                                       Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Button x:Name="awardButton" Content="Cobrar Recompensa" Grid.Column="2" Grid.RowSpan="2"
                                    VerticalAlignment="Center" HorizontalAlignment="Right" IsEnabled="False" Margin="0,0,30,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
